	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title></title>
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width">
		
		<link rel="stylesheet/less" href="styles/main.less">
		<script src="scripts/vendor/less.min.js"></script>
		<!-- <script src="scripts/vendor/jquery.min.js"></script> -->
	</head>
	<body>
	<section id="movies">
		<ol>
			{{#movies}}
			<li id="movie-{{id}}">
				<details>
					<summary class="title">{{title}}</summary>
					<header>
						<section class="operations">
							<span class="edit command">Edit</span>
							<a>Delete</a>
						</section>
					</header>
					<div class="main">
						<h1>{{title}}</h1>
						(<span class="year">{{year}}</span>)
						<div class="poster">
							{{poster}}
						</div>
						<details class="plot">
							<summary class="synopsis">
									Synopsis: <span>{{synopsis}}</span>
								</summary>
							<p>{{plot}}</p>
						</details>
						<table class="cast">
							<thead>
								<tr>
									<td>Actor</td>
									<td>Character</td>
								</tr>
							</thead>
							<tbody>
								{{#cast}}
									<tr id="id-{{id}}">
										<td class="actor"><span id="actor-{{id}}">{{name}}</span></td>
										<td class="character">{{character}}</td>
								</tr>
								{{/cast}}
							</tbody>
						</table>
						<span id="add_actor_button" class="command">add</span>
					</div>
				</details>
			</li>
			{{/movies}}
		</ol>
		<span id="add_movie_button" class="command">add</span>
	</section>
	<footer></footer>
	<script data-main="scripts/main" src="scripts/vendor/require.js"></script>
</body>
</html>
